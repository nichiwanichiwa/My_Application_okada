<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.okadayosuke.myapplication.setting">

    <TextView android:text="大人" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:id="@+id/Adult"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/setting_home"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小人"
        android:id="@+id/Kids"
        android:layout_alignBottom="@+id/input_Kids"
        android:layout_toEndOf="@+id/setting_food" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="期日"
        android:id="@+id/Limit"
        android:layout_alignBottom="@+id/input_limit"
        android:layout_alignStart="@+id/Baby" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定"
        android:id="@+id/Setting"
        android:layout_alignBottom="@+id/input_setting"
        android:layout_alignStart="@+id/Limit" />

    <EditText
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:ems="10"
        android:id="@+id/input_Adult"
        android:layout_alignBottom="@+id/Adult"
        android:layout_toEndOf="@+id/setting_home" />

    <EditText
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:ems="10"
        android:id="@+id/input_Kids"
        android:layout_alignBottom="@+id/human1"
        android:layout_toStartOf="@+id/human2" />

    <EditText
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:ems="10"
        android:id="@+id/input_limit"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/input_setting" />

    <EditText
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:ems="10"
        android:id="@+id/input_setting"
        android:layout_below="@+id/input_limit"
        android:layout_toEndOf="@+id/setting_home"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/human1"
        android:layout_marginRight="33dp"
        android:layout_alignBottom="@+id/input_Adult"
        android:layout_toEndOf="@+id/input_Adult"
        android:layout_marginStart="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/human2"
        android:layout_alignTop="@+id/Kids"
        android:layout_alignStart="@+id/setting"
        android:layout_marginStart="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/human3"
        android:layout_alignBottom="@+id/input_limit"
        android:layout_alignStart="@+id/human1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/human4"
        android:layout_alignBottom="@+id/input_setting"
        android:layout_alignStart="@+id/human3" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="ホーム"
        android:id="@+id/setting_home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="非常食"
        android:id="@+id/setting_food"
        android:layout_alignTop="@+id/setting_home"
        android:layout_toEndOf="@+id/setting_home" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="設定"
        android:id="@+id/setting"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="備蓄品"
        android:id="@+id/setting_stock"
        android:layout_alignBottom="@+id/setting"
        android:layout_toStartOf="@+id/setting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="幼児"
        android:id="@+id/Baby"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/input_limit"
        android:layout_alignStart="@+id/Adult" />

    <EditText
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"

        android:id="@+id/input_Baby"
        android:layout_alignBottom="@+id/Baby"
        android:layout_toEndOf="@+id/Adult" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/human5"
        android:layout_alignBottom="@+id/input_Baby"
        android:layout_alignStart="@+id/human3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※中学生～大人"
        android:id="@+id/setting_comment1"
        android:textSize="12dp"
        android:layout_below="@+id/input_Adult"
        android:layout_alignStart="@+id/Adult" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※２歳～小学生"
        android:id="@+id/setting_comment2"
        android:textSize="12dp"
        android:layout_below="@+id/Kids"
        android:layout_alignStart="@+id/Kids" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※２歳以下"
        android:id="@+id/setting_comment3"
        android:textSize="12dp"
        android:layout_below="@+id/input_Baby"
        android:layout_alignStart="@+id/Baby" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※何日前にメッセージを出すか設定します"
        android:id="@+id/setting_comment4"
        android:textSize="12dp"
        android:layout_below="@+id/input_limit"
        android:layout_alignStart="@+id/Limit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※何日分の備蓄をするか設定します"
        android:id="@+id/setting_comment5"
        android:textSize="12dp"
        android:layout_below="@+id/Setting"
        android:layout_alignStart="@+id/Setting" />

</RelativeLayout>
