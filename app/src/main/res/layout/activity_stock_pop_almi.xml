<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.okadayosuke.myapplication.stock_pop_almi">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/almi"
        android:src="@drawable/almi"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="個"
        android:id="@+id/object"
        android:layout_alignBottom="@+id/almi"
        android:layout_toStartOf="@+id/almi" />

    <EditText
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="2"
        android:id="@+id/input_almi"
        android:layout_alignBottom="@+id/object"
        android:layout_toStartOf="@+id/object" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="幼児"
        android:id="@+id/textView87"
        android:layout_alignBottom="@+id/almi"
        android:layout_toEndOf="@+id/almi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/textView88"
        android:layout_alignTop="@+id/textView87"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小人"
        android:id="@+id/textView89"
        android:layout_above="@+id/textView87"
        android:layout_toEndOf="@+id/almi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/textView90"
        android:layout_alignTop="@+id/textView89"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大人"
        android:id="@+id/textView91"
        android:layout_above="@+id/textView89"
        android:layout_toEndOf="@+id/almi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/textView92"
        android:layout_above="@+id/textView90"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:id="@+id/almi_adult"
        android:layout_above="@+id/textView89"
        android:layout_toStartOf="@+id/textView90" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:id="@+id/almi_kids"
        android:layout_above="@+id/textView87"
        android:layout_toStartOf="@+id/textView88" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:id="@+id/almi_baby"
        android:layout_alignBottom="@+id/textView87"
        android:layout_toStartOf="@+id/textView88" />

</RelativeLayout>
