<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.okadayosuke.myapplication.stock_pop_gas">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/gas"
        android:src="@drawable/gas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="個"
        android:id="@+id/object"
        android:layout_alignBottom="@+id/gas"
        android:layout_toStartOf="@+id/gas" />

    <EditText
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:ems="10"
        android:id="@+id/input_gas"
        android:layout_alignBottom="@+id/object"
        android:layout_toStartOf="@+id/object" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="幼児"
        android:id="@+id/textView99"
        android:layout_alignBottom="@+id/gas"
        android:layout_toEndOf="@+id/gas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/textView100"
        android:layout_alignBottom="@+id/textView99"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小人"
        android:id="@+id/textView101"
        android:layout_above="@+id/textView99"
        android:layout_toEndOf="@+id/gas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/textView102"
        android:layout_above="@+id/textView100"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大人"
        android:id="@+id/textView103"
        android:layout_above="@+id/textView101"
        android:layout_toEndOf="@+id/gas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/textView104"
        android:layout_alignBottom="@+id/textView103"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:id="@+id/gas_adult"
        android:layout_alignBottom="@+id/textView103"
        android:layout_toStartOf="@+id/textView104" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:id="@+id/gas_kids"
        android:layout_above="@+id/textView99"
        android:layout_toStartOf="@+id/textView100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:id="@+id/gas_baby"
        android:layout_alignBottom="@+id/textView99"
        android:layout_toStartOf="@+id/textView100" />

</RelativeLayout>
